
<%= form_for Question.new, :html => {:class => "form-inline box", :style => "width:auto;height:400px;"} do |f| %>
  <div align="center" id="cell">
    <%= f.text_area :content, :rows => 3, :cols => 50 %>
    <%= f.button "Go fucking Ask!!!", :class => "btn btn-primary"%>
  </div>
  <div align="center" id="cell">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>
<!-- Carousel================================================== -->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% total_page = (@questions.count/3.0).ceil %>
    <% total_page.times do |i| %>
      <% if i == 0 %>
        <li data-target="#carousel-example-generic" data-slide-to=<%= i+1 %> class="active"></li>
      <% else %>
        <li data-target="#carousel-example-generic" data-slide-to=<%= i+1 %>></li>
      <% end %>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% total_page.times do |i| %>
      <% if i == 0 %>
        <div class="item active container marketing">
      <% else %>
        <div class="item container marketing">
      <% end %>

        <div class="row">
          <% 3.times do |j| %>
            <div class="col-lg-4">
              <% question_index = i * 3 + j %>
              <% if question_index < @questions.count %>
                <p><%= @questions[question_index].content %></p>
                <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p> 
              <% end %>
            </div><!-- /.col-lg-4 -->
          <% end %>
        </div><!-- /.row -->
      </div>
    <% end %>
  </div>
  <!-- Right & Left button-->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->

